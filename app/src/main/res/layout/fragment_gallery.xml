<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/g_img1"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/gimg1"
            android:paddingBottom="24dp"/>

        <ImageView
            android:id="@+id/g_img2"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:paddingBottom="24dp"
            app:srcCompat="@drawable/gimg2" />

        <ImageView
            android:id="@+id/g_img3"
            android:paddingBottom="24dp"

            android:layout_width="wrap_content"
            android:layout_height="250dp"
            app:srcCompat="@drawable/gimg3" />

        <ImageView
            android:id="@+id/g_img4"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            app:srcCompat="@drawable/gimg4"
            android:paddingBottom="24dp"
            />
        <ImageView
            android:id="@+id/g_img5"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            app:srcCompat="@drawable/gimg5"
            android:paddingBottom="24dp"
            />
    </LinearLayout>
</ScrollView>